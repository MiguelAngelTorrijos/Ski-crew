<div class="container">
    <h1>Editar perfil </h1>
    <hr>
    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/profile/edit/" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="username">
                </div>
                <div class="form-group">
                    <label for="author">Gmail</label>
                    <input type="mail" class="form-control" id="mail" name="email">
                </div>
                <div class="form-group">
                    <label for="photo">Photo</label>
                    <input type="text" class="form-control" id="photoProfile" name="photoProfile">
                </div>
                <button type="submit" class="btn btn-dark btn-block">Save changes</button>
            </form>

        </div>

    </div>

    <hr>
    <a href="/" class="btn btn-dark btn-block">Volver</a>

</div>